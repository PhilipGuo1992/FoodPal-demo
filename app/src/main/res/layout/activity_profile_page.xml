<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.phili.foodpaldemo.ProfileActivity"
    android:background="@color/graylight">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout

                android:id="@+id/cardview1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                <TextView
                    android:id="@+id/display1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Display"
                    android:textSize="22sp" />

                    <TextView
                        android:id="@+id/displaynum1"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:paddingLeft="25dp"
                        android:text="100"
                        android:textColor="@color/startblue"
                        android:textSize="22sp" />

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/cardview2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/display2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:text="Display2"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/displaynum2"

                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nunito_semibold"
                    android:paddingLeft="25dp"
                    android:text="50"
                    android:textColor="@color/startblue"
                    android:textSize="22sp" />

            </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cardview3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/display3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Display3"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/displaynum3"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:paddingLeft="25dp"
                        android:text="100"
                        android:textColor="@color/startblue"
                        android:textSize="22sp" />
                </LinearLayout>

                
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:src="@drawable/mask_group1" />

            <TextView
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/nunito_bold"
                android:text="Yi Ren"
                android:textColor="@android:color/white"
                android:textSize="25sp" />

        </LinearLayout>

    </RelativeLayout>

    <TableLayout
        android:id="@+id/table_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_join"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/join"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Media" />

            <Button
                android:id="@+id/btn_joined"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/joined"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Media" />

            <Button
                android:id="@+id/btn_list"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="@string/list_restaurant"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Media" />

            <Button
                android:id="@+id/btn_set"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:background="@color/colorGray"
                android:text="@string/profile"
                android:textAppearance="@style/TextAppearance.Compat.Notification.Media" />
        </TableRow>
    </TableLayout>

</LinearLayout>






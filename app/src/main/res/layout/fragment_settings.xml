<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
tools:context="com.example.phili.foodpaldemo.Fragment.SettingsFragment"
android:background="@color/graylight">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="340dp">



        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout

                    android:id="@+id/cardview1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/display1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Display"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/displaynum1"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:paddingLeft="35dp"
                        android:text="100"
                        android:textAlignment="gravity"
                        android:textColor="@color/startblue"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cardview2"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/display2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Display2"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/displaynum2"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:paddingLeft="35dp"
                        android:text="50"
                        android:textAlignment="gravity"
                        android:textColor="@color/startblue"
                        android:textSize="22sp" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/cardview3"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/display3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Display3"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/displaynum3"

                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_semibold"
                        android:paddingLeft="35dp"
                        android:text="100"
                        android:textAlignment="gravity"
                        android:textColor="@color/startblue"
                        android:textSize="22sp" />
                </LinearLayout>


            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="290dp"
            android:background="@drawable/gradientbackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editprofile"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="top|right"
                android:src="@drawable/ic_edit_black_24dp" />


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:src="@drawable/photo2"
                />

            <EditText
                android:id="@+id/profileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:focusable="false"
                android:fontFamily="@font/nunito_bold"
                android:inputType="textNoSuggestions"
                android:textColor="@android:color/white"
                android:textCursorDrawable="@drawable/color_white_cursor"
                android:textSize="25sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/editsubmit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="top|end"
            android:layout_marginLeft="380dp"
            android:visibility="invisible"
            android:src="@drawable/ic_done_black_24dp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_email_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/nunito_semibold"
                android:singleLine="true"
                android:text="@string/user_email"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:enabled="true"
                android:focusable="false"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textNoSuggestions"
                android:paddingLeft="20dp"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_face_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="8dp"
                android:fontFamily="@font/nunito_semibold"
                android:singleLine="true"

                android:text="@string/user_gender"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:enabled="true"
                android:focusable="false"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textNoSuggestions"
                android:paddingLeft="20dp"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_cake_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"

                android:fontFamily="@font/nunito_semibold"
                android:singleLine="true"
                android:text="@string/user_bod"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/birthday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:enabled="true"
                android:focusable="false"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textNoSuggestions"
                android:paddingLeft="20dp"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_account_balance_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/nunito_semibold"
                android:singleLine="true"

                android:text="@string/user_major"
                android:textSize="16sp" />


            <EditText
                android:id="@+id/major"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:enabled="true"
                android:focusable="false"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textNoSuggestions"
                android:paddingLeft="20dp"
                android:textSize="16sp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"

                android:src="@drawable/ic_info_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/nunito_semibold"
                android:singleLine="true"

                android:text="About:"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/selfdes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@null"
                android:enabled="true"
                android:focusable="false"
                android:fontFamily="@font/nunito_semibold"
                android:inputType="textNoSuggestions"
                android:paddingLeft="20dp"
                android:textSize="16sp" />



        </LinearLayout>


        <Button
            android:id="@+id/btn_signout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/button_background"
            android:fontFamily="@font/nunito_bold"
            android:gravity="center"
            android:paddingBottom="15dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp"
            android:text="@string/signout"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />


    </LinearLayout>




</FrameLayout>





